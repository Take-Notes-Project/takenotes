<div class="container">
  <div class="row">
    <div class="col-md-12 text-center bookshelf">
      <h1 class="heading">Bookshelf </h1>

      {{#each booksList}}
      <div class="book-holder">
        <div class="book-container">
          <div class="book">
            <div class="book-cover">
              <div class="cover">
                <span class="book-title">
                  <p><a href="/books/{{this._id}}">{{this.title}}</a></p>
                </span>
                <span class="book-writer">
                  <p><a href="/books/{{this._id}}">{{this.author.lastName}}</a></p>
                </span>
              </div>
            </div>
            <div class="book-spine">
              <h1><a href="/books/{{this._id}}">{{this.title}}</a></h1>
            </div>
          </div>
        </div>
      </div>
      {{/each}}




    </div>
  </div>
</div>