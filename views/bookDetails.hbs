{{!-- #with sets a context for an object -> i don't need to write bookDetails.title etc. --}}
{{#with bookDetails}}
<h1>{{title}}</h1>
    <p>Notes: {{description}}</p>
    <p>Rating: {{rating}}</p>
    <p><a href="/books/edit/{{_id}}">Edit this book</a></p>
    <p><a href="/books/delete/{{_id}}">Delete this book</a></p>
{{/with}}

